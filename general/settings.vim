syntax enable
set encoding=utf-8
set scrolloff=7
set wrap
set noswapfile
set number
set relativenumber
set splitbelow
set splitright
set noshowmode

set updatetime=300
set timeoutlen=500

" Indent
set expandtab
set softtabstop=4
set tabstop=4
set shiftwidth=4
set cinkeys-=:

" Enable the mouse
set mouse=a

set autochdir
set clipboard=unnamedplus

